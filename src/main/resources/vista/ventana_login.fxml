<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.tds.gestiongastos.vista.VentanaLoginController"
           styleClass="root-pane">

    <VBox alignment="CENTER" spacing="20" maxWidth="400" styleClass="login-box">

        <Label text="Gestión de Gastos" styleClass="titulo"/>

        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="campoUsuario" promptText="Usuario" maxWidth="250"/>
            <PasswordField fx:id="campoPassword" promptText="Contraseña" maxWidth="250"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Button text="Iniciar sesión" onAction="#handleLogin" styleClass="boton-login" maxWidth="250"/>
            <Button text="Registrarse" onAction="#handleRegistro" styleClass="boton-secundario" maxWidth="250"/>
        </VBox>

    </VBox>
</StackPane>

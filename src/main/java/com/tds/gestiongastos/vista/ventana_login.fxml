<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tds.gestiongastos.vista.VentanaLoginController"
      alignment="CENTER" spacing="10" padding="30">

    <Label text="Iniciar sesión" style="-fx-font-size: 18px;"/>
    <TextField fx:id="campoUsuario" promptText="Usuario" maxWidth="200"/>
    <PasswordField fx:id="campoPassword" promptText="Contraseña" maxWidth="200"/>
    <Button text="Entrar" onAction="#handleLogin" maxWidth="200"/>
</VBox>

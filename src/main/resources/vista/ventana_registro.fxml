<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml" styleClass="root-pane"
	fx:controller="com.tds.gestiongastos.vista.RegistroViewController">

	<VBox alignment="CENTER" spacing="20" maxWidth="400"
		styleClass="login-box">

		<Label text="Crear nueva cuenta" styleClass="titulo" />

		<VBox spacing="10" alignment="CENTER">
			<TextField fx:id="campoUsuario" promptText="Usuario"
				maxWidth="250" />
			<PasswordField fx:id="campoPassword"
				promptText="Contraseña" maxWidth="250" />
			<PasswordField fx:id="campoConfirmar"
				promptText="Confirmar contraseña" maxWidth="250" />
		</VBox>

		<VBox spacing="10" alignment="CENTER">
			<Button text="Registrarse" onAction="#registrarUsuario"
				styleClass="boton-login" maxWidth="250" />
			<Button text="Volver al inicio de sesión"
				onAction="#volverLogin" styleClass="boton-secundario"
				maxWidth="250" />
		</VBox>

	</VBox>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tds.gestiongastos.vista.VerGastosViewController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Mis gastos" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="tablaGastos" prefHeight="400">
        <columns>
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
            <TableColumn fx:id="colConcepto" text="Concepto" prefWidth="200"/>
            <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="120"/>
            <TableColumn fx:id="colValor" text="Valor (€)" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Total:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="labelTotal" text="0.00 €" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
    </HBox>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root-pane"
	xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.tds.gestiongastos.vista.MenuViewController">

	<top>
		<HBox styleClass="top-bar">
			<Label styleClass="app-title" text="Gestión de Gastos" />
			<Pane HBox.hgrow="ALWAYS" />
			<Button fx:id="botonUsuario" styleClass="user-button"
				text="Usuario" />
			<Button styleClass="user-button" text="Cerrar sesión"
				onAction="#handleCerrarSesion" />
		</HBox>
	</top>

	<left>
		<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
			styleClass="sidebar" vbarPolicy="AS_NEEDED">
			<VBox spacing="15" styleClass="menu-section">
				<padding>
					<Insets bottom="10" left="10" right="10" top="10" />
				</padding>

				<VBox spacing="5">
					<Label styleClass="menu-title" text="Gastos" />
					<Button styleClass="menu-button" text="Registrar gasto"
						onAction="#handleRegistrarGasto" />
					<Button styleClass="menu-button" text="Ver gastos"
						onAction="#handleVerGastos" />
				</VBox>

				<VBox spacing="5">
					<Label styleClass="menu-title" text="Alertas" />
					<Button styleClass="menu-button" text="Configurar alertas"
						onAction="#handleConfigurarAlertas" />
				</VBox>

				<VBox spacing="5">
					<Label styleClass="menu-title" text="Cuentas" />
					<Button styleClass="menu-button" text="Crear cuenta"
						onAction="#handleCrearCuenta" />
				</VBox>

				<VBox spacing="5">
					<Label styleClass="menu-title" text="Importar datos" />
					<Button styleClass="menu-button" text="Importar desde banco"
						onAction="#handleImportarBanco" />
				</VBox>

			</VBox>
		</ScrollPane>
	</left>

	<center>
		<StackPane fx:id="contenidoCentral"
			styleClass="content-area">
			<Label styleClass="placeholder-text"
				text="Selecciona una opción del menú" />
		</StackPane>
	</center>

</BorderPane>